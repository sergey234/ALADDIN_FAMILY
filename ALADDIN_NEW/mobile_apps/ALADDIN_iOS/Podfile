# Uncomment the next line to define a global platform for your project
platform :ios, '17.0'

target 'ALADDIN' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ALADDIN Family Security App
  # Core iOS frameworks
  pod 'SwiftUI', '~> 5.0'
  pod 'Combine', '~> 5.0'
  
  # Security and Authentication
  pod 'LocalAuthentication', '~> 3.0'
  pod 'CryptoKit', '~> 1.0'
  
  # Networking and API
  pod 'Alamofire', '~> 5.8'
  pod 'Moya', '~> 15.0'
  
  # Data and Storage
  pod 'CoreData', '~> 1.0'
  pod 'CloudKit', '~> 1.0'
  pod 'KeychainAccess', '~> 4.2'
  
  # UI and Animation
  pod 'Lottie', '~> 4.3'
  pod 'SDWebImageSwiftUI', '~> 2.2'
  
  # Location and Maps
  pod 'MapKit', '~> 1.0'
  pod 'CoreLocation', '~> 1.0'
  
  # Camera and Media
  pod 'AVFoundation', '~> 1.0'
  pod 'Photos', '~> 1.0'
  
  # Notifications
  pod 'UserNotifications', '~> 1.0'
  
  # Health and Fitness
  pod 'HealthKit', '~> 1.0'
  
  # HomeKit Integration
  pod 'HomeKit', '~> 1.0'
  
  # Widgets and Extensions
  pod 'WidgetKit', '~> 1.0'
  
  # Testing
  pod 'Quick', '~> 7.0'
  pod 'Nimble', '~> 12.0'

  target 'ALADDINTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ALADDINUITests' do
    # Pods for testing
  end

end
