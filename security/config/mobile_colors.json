          }
        }
      }
    },
    "ui_components": {
      "buttons": {
        "primary": {
          "background": "var(--color-primary)",
          "text": "var(--color-text)",
          "border": "var(--color-primary)",
          "hover": "var(--color-primary-dark)",
          "active": "var(--color-primary-darker)"
        },
        "secondary": {
          "background": "var(--color-secondary)",
          "text": "var(--color-text)",
          "border": "var(--color-secondary)",
          "hover": "var(--color-secondary-dark)",
          "active": "var(--color-secondary-darker)"
        },
        "accent": {
          "background": "var(--color-accent)",
          "text": "var(--color-text)",
          "border": "var(--color-accent)",
          "hover": "var(--color-accent-dark)",
          "active": "var(--color-accent-darker)"
        }
      },
      "cards": {
        "default": {
          "background": "var(--color-background)",
          "border": "var(--color-secondary)",
          "shadow": "var(--shadow-medium)"
        },
        "elevated": {
          "background": "var(--color-background)",
          "border": "var(--color-secondary)",
          "shadow": "var(--shadow-dark)"
        }
      },
      "text": {
        "primary": {
          "color": "var(--color-text)",
          "size": "16px",
          "weight": "400"
        },
        "secondary": {
          "color": "var(--color-text-secondary)",
          "size": "14px",
          "weight": "400"
        },
        "accent": {
          "color": "var(--color-accent)",
          "size": "16px",
          "weight": "600"
        }
      },
      "status": {
        "success": {
          "background": "var(--color-success)",
          "text": "var(--text-on-success)",
          "border": "var(--color-success)"
        },
        "warning": {
          "background": "var(--color-warning)",
          "text": "var(--text-on-warning)",
          "border": "var(--color-warning)"
        },
        "error": {
          "background": "var(--color-error)",
          "text": "var(--text-on-error)",
          "border": "var(--color-error)"
        },
        "info": {
          "background": "var(--color-info)",
          "text": "var(--text-on-info)",
          "border": "var(--color-info)"
        }
      }
    },
    "gradients": {
      "primary_gradient": {
        "from": "var(--color-primary)",
        "to": "var(--color-secondary)",
        "direction": "to bottom right"
      },
      "matrix_gradient": {
        "from": "var(--color-success)",
        "to": "var(--color-info)",
        "direction": "to right"
      },
      "accent_gradient": {
        "from": "var(--color-accent)",
        "to": "var(--color-warning)",
        "direction": "to bottom"
      }
    },
    "shadows": {
      "light": "0 2px 4px var(--shadow-light)",
      "medium": "0 4px 8px var(--shadow-medium)",
      "dark": "0 8px 16px var(--shadow-dark)",
      "accent": "0 4px 8px var(--shadow-accent)"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px"
    },
    "typography": {
      "font_family": {
        "primary": "system-ui, -apple-system, sans-serif",
        "monospace": "Menlo, Monaco, Consolas, monospace"
      },
      "font_sizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px"
      },
      "font_weights": {
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800"
      }
    },
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    },
    "accessibility": {
      "contrast_ratios": {
        "AA": 4.5,
        "AAA": 7.0
      },
      "focus_indicators": {
        "outline": "2px solid var(--color-accent)",
        "outline_offset": "2px"
      },
      "touch_targets": {
        "minimum_size": "44px",
        "recommended_size": "48px"
      }
    }
  }
}