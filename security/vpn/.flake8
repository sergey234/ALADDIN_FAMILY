[flake8]
max-line-length = 120
extend-ignore = E203,E501,W503,E402,F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    .coverage,
    .mypy_cache,
    .tox,
    tests/fixtures,
    migrations
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106,S108
max-complexity = 10
select = 
    C,
    E,
    F,
    W,
    B,
    B950